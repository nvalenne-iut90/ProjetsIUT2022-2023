<div class="posts">
    <div class="row justify-content-center">
        {{#each posts}}
            <div class="col-lg-4" style="margin-top: 50px;">
                <div class="card">
                    <img src="{{this.image}}"
                         class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">Posté par {{this.author}}</h5>
                        {{#if this.comments}}
                            <ul class="list-group-item">
                                {{#each this.comments}}
                                    <li  class="list-group-item">{{raccourcirCommentaire this}}</li>
                                {{/each}}
                            </ul>
                        {{else}}
                            <ul class="list-group">
                                <li class="list-group-item">Soyez le premier à commenter ce
                                    post!</li>
                            </ul>
                        {{/if}}
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>